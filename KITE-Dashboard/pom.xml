<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>org.webrtc.kite</groupId>
  <artifactId>kiteweb</artifactId>
  <version>1.0</version>
  <packaging>war</packaging>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>

  <build>
    <sourceDirectory>src</sourceDirectory>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.6.1</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-war-plugin</artifactId>
        <version>3.0.0</version>
        <configuration>
          <warSourceDirectory>WebContent</warSourceDirectory>
          <webResources>
            <resource>
              <directory>${project.basedir}/../third_party/pixeden-stroke-7-icon/fonts</directory>
              <targetPath>assets/fonts</targetPath>
            </resource>
            <resource>
              <directory>${project.basedir}/../third_party/pixeden-stroke-7-icon/css</directory>
              <targetPath>assets/css</targetPath>
            </resource>
            <resource>
              <directory>${project.basedir}/../third_party/light-bootstrap-dashboard/css</directory>
              <targetPath>assets/css</targetPath>
            </resource>
            <resource>
              <directory>${project.basedir}/../third_party/json-browser/css</directory>
              <targetPath>assets/css</targetPath>
            </resource>
            <resource>
              <directory>${project.basedir}/../third_party/json-browser/js</directory>
              <targetPath>assets/js</targetPath>
            </resource>
            <resource>
              <directory>${project.basedir}/../third_party/light-bootstrap-dashboard/js</directory>
              <targetPath>assets/js</targetPath>
            </resource>
            <resource>
              <directory>${project.basedir}/../third_party/bootstrap_notify/js</directory>
              <targetPath>assets/js</targetPath>
            </resource>
            <resource>
              <directory>${project.basedir}/../third_party/jquery-git/js</directory>
              <targetPath>assets/js</targetPath>
            </resource>
            <resource>
              <directory>${project.basedir}/../third_party/startbootstrap-grayscale</directory>
            </resource>
          </webResources>          
        </configuration>
      </plugin>
    </plugins>
    <finalName>kiteweb</finalName>
  </build>

  <dependencies>
    <dependency>
      <groupId>org.apache.velocity</groupId>
      <artifactId>velocity</artifactId>
      <version>1.7</version>
    </dependency>
    <dependency>
      <groupId>org.apache.velocity</groupId>
      <artifactId>velocity-tools</artifactId>
      <version>2.0</version>
    </dependency>
    <dependency>
      <groupId>org.glassfish</groupId>
      <artifactId>javax.json</artifactId>
      <version>1.0.4</version>
    </dependency>
    <!-- https://mvnrepository.com/artifact/org.xerial/sqlite-jdbc -->
    <dependency>
      <groupId>org.xerial</groupId>
      <artifactId>sqlite-jdbc</artifactId>
      <version>3.16.1</version>
    </dependency>
    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>javax.servlet-api</artifactId>
      <version>3.1.0</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>javax.websocket</groupId>
      <artifactId>javax.websocket-api</artifactId>
      <version>1.1</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>commons-logging</groupId>
      <artifactId>commons-logging</artifactId>
      <version>1.1.1</version>
    </dependency>
  </dependencies>

</project>
